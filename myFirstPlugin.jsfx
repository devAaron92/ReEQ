desc:My Tone Generator

slider1:60<0,127,1>MIDI Note


@init
// runs once when the plugin loads
pi = 3.14159265359;
phase = 0


@slider
frequency = 440 * pow(2, (slider1 - 69) / 12);
period = 2 * pi;
omega = (period * frequency) / sampleRate



@block
sampleRate = srate

@sample
phase += omega
spl0 = spl1 = sin(phase)

